@model List<Order>

@{
    int index = 0;
}

<div class="df">

    <div class="w-250px">
        <div class="w-250px db">
            <partial name="_leftNavigationLogin" />
        </div>
    </div>


    <div class="w-100">

        @if (Model.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>Lp</th>
                        <th>Ilość produktów</th>
                        <th>Suma zamówienia</th>
                        <th>Status realizacji</th>
                        <th>Data zamówienia</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        index++;

                        <tr>
                            <td>@index.</td>


                            <td>
                                @order.OrderItems.Select(s => s.Ilosc).Sum()
                            </td>


                            <td>
                                @order.Suma zł
                            </td>



                            <td>
                                @order.StatusZamowienia
                            </td>

                            <td>
                                @order.DataZamowienia.ToShortDateString()
                            </td>

                            <td>
                                <a asp-action="OrderDetails" asp-controller="Orders" asp-route-orderId="@order.OrderId">Zobacz szczegóły</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="centerxy">
                W Twoim koszyku nie ma jeszcze żadnych pozycji.
                <a asp-action="Index" asp-controller="Home" style="padding: 10px; color: white; background-color:deepskyblue; border-radius: 50px; margin: 20px;">
                    Przejdź do sklepu
                </a>
            </div>
        }
    </div>

</div>
