@model List<Favourite>

@{ 
    int index = 0;
}

<div class="df">
    <div class="w-250px">
        <div class="w-250px db">
            <partial name="_leftNavigationLogin" />
        </div>
    </div>

    <div class="c-black">
        <table cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th>Lp</th>
                    <th>Photo</th>
                    <th>Nazwa</th>
                    <th>Cena</th>
                    <th>Action</th>
                </tr>
            </thead>
            <thead>
                @foreach(var favourite in Model)
            {
                    index ++;
                <tr>
                    <td>@index.</td>
                    <td>
                        <div class="image w-70px">@*
                            <img src="@favourite.Product.PhotosProduct[0].Path" />*@
                        </div>
                    </td>

                    <td class="w-100">
                        <a asp-action="ProductDetails" asp-controller="Home" asp-route-productId="@favourite.ProductId">@favourite.Product.Name</a>
                    </td>
                    <td>@favourite.Product.Price.00 zł</td>  
                    <td>
                        <a asp-action="Delete" asp-controller="Favourites" asp-route-favouriteId="@favourite.FavouriteId">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            </thead>
        </table>
    </div>
</div>
